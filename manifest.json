{
  "manifest_version": 3,
  "name": "Ro'eh - Digital Oxygen", 
  "version": "1.0.0",
  "icons": {
    "16": "icons/Roeh (1)_imresizer.png",
    "48": "icons/ Untitled design (2).png",
    "128": "icons/Untitled design (3).png"
  },
  "description": "See link safety at a glance. Breathe easy online.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ro'eh Security Scan"
  }
}
